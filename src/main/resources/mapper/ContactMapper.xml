<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须是ContactMapper接口的全类名，不能错！ -->
<mapper namespace="com.agri.platform.mapper.ContactMapper">

    <!-- 插入方法：id="insertContact" 对应接口中 insertContact(Contact contact) -->
    <insert id="insertContact" parameterType="com.agri.platform.entity.Contact">
        INSERT INTO contact (name, phone, email, subject, message, create_time)
        VALUES (#{name}, #{phone}, #{email}, #{subject}, #{message}, #{createTime})
    </insert>

    <!-- 查询方法：id="selectContactById" 对应接口中 selectContactById(Long id) -->
    <select id="selectContactById" resultType="com.agri.platform.entity.Contact">
        SELECT * FROM contact WHERE id = #{id}
    </select>

    <!-- 删除方法：id="deleteContactById" 对应接口中 deleteContactById(Long id) -->
    <delete id="deleteContactById">
        DELETE FROM contact WHERE id = #{id}
    </delete>

    <!-- （可选）添加自定义方法的SQL，比如根据姓名查询 -->
    <select id="selectContactByName" resultType="com.agri.platform.entity.Contact">
        SELECT * FROM contact WHERE name = #{name}
    </select>

</mapper>